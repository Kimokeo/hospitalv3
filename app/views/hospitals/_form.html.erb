
<% if flash[:notice] %>
  <p id="notice"><%= flash[:notice] %></p>
<% end %>

<% if flash[:error] %>
  <p id="error"><%= flash[:error] %></p>
<% end %>

<%= form_for(@hospital) do |f| %>
    <br>
	<%= f.label :name %>
	<%= f.text_field :name %>
	<br>
	<%= f.label :description %>
	<%= f.text_field :description %>
	<br>
	<%= f.label :address %>
	<%= f.text_field :address %>
	<br>
	<%= f.label :city %>
	<%= f.text_field :city %>
	<br>
	<%= f.submit %>
<% end %>
